<div class="container mt-4">
     <a href="/financas/dashboard" class="mb-4 btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Voltar
    </a>
    <!-- Título Principal -->
    <h1 class="text-dark fw-bold mb-4">Carteira</h1>
    
    <!-- Card de Saldo -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg rounded-4 h-100">
                <div class="card-header text-dark p-3" style="border-top-left-radius: 15px; border-top-right-radius: 15px; border-bottom: none; background-color: #f8f9fa;">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title m-0 fw-bold">Informações de Saldo</h5>
                        <span class="badge bg-light text-dark" style="font-size: 0.85rem; padding: 3px 8px; border-radius: 20px;">
                            <i class="bi bi-wallet2 me-1"></i> Atualizado
                        </span>
                    </div>
                </div>
                
                <div class="card-body p-4">
                    <!-- Saldo Atual -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-2">Saldo Atual</h6>
                        <div class="bg-light rounded-3 p-3">
                            <h3 class="fw-bold {{#if (gt saldo 0)}}text-success{{else}}text-danger{{/if}}">
                                R$ {{saldo}}
                            </h3>
                        </div>
                    </div>
                    
                    <!-- Saldo Previsto -->
                    <div>
                        <h6 class="text-muted mb-2">Saldo Previsto</h6>
                        <div class="bg-light rounded-3 p-3">
                            <h3 class="fw-bold {{#if (gt saldoPrevisto 0)}}text-success{{else}}text-danger{{/if}}">
                                R$ {{saldoPrevisto}}
                            </h3>
                            <p class="text-muted small mt-1 mb-0">
                                <i class="bi bi-info-circle me-1"></i> Previsão baseada em despesas e receitas agendadas
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Espaço para adicionar mais cards no futuro -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg rounded-4 h-100">
                <div class="card-header text-dark p-3" style="border-top-left-radius: 15px; border-top-right-radius: 15px; border-bottom: none; background-color: #f8f9fa;">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title m-0 fw-bold">Resumo Financeiro</h5>
                        <span class="badge bg-light text-dark" style="font-size: 0.85rem; padding: 3px 8px; border-radius: 20px;">
                            <i class="bi bi-graph-up me-1"></i> Mensal
                        </span>
                    </div>
                </div>
                
                <div class="card-body p-4">
                    <!-- Balanço do Mês -->
                    <div>
                        <h6 class="text-muted mb-2">Balanço do Mês</h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <p class="mb-1">Receitas</p>
                                <h5 class="text-success mb-0">+ R$ {{totalReceitas}}</h5>
                            </div>
                            <div>
                                <p class="mb-1">Despesas</p>
                                <h5 class="text-danger mb-0">- R$ {{totalDespesas}}</h5>
                            </div>
                            <div>
                                <p class="mb-1">Resultado</p>
                                <h5 class="{{#if (gt balanco 0)}}text-success{{else}}text-danger{{/if}} mb-0">
                                    {{#if (gt balanco 0)}}+{{/if}} R$ {{balanco}}
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Rodapé do Card -->
                <div class="card-footer bg-white p-3 border-0" style="border-bottom-left-radius: 15px; border-bottom-right-radius: 15px;">
                    <div class="d-flex justify-content-end align-items-center">
                        <a href="/financas/dashboard" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-speedometer2 me-1"></i> Ver Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>